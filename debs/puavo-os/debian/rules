#!/usr/bin/make -f

%:
	dh $@ --with systemd

export GEM_HOME := $(CURDIR)/debian/tmp
export PATH := $(GEM_HOME)/bin:$(PATH)

override_dh_auto_install:
	$(MAKE) -C autopilot				\
		install prefix=/usr sysconfdir=/etc		\
		DESTDIR=$(CURDIR)/debian/puavo-autopilot

	$(MAKE) -C autopoweroff				\
		install prefix=/usr sysconfdir=/etc		\
		DESTDIR=$(CURDIR)/debian/puavo-autopoweroff

