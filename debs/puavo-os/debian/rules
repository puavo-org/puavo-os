		install prefix=/usr sysconfdir=/etc		\
		DESTDIR=$(CURDIR)/debian/puavo-wlanmapper

	$(MAKE) -C wlan/controller			\
		install prefix=/usr sysconfdir=/etc		\
		DESTDIR=$(CURDIR)/debian/puavo-wlancontroller

	$(MAKE) -C wlan/ruby-puavowlan			\
		install prefix=/usr sysconfdir=/etc		\
		DESTDIR=$(CURDIR)/debian/ruby-puavowlan

override_dh_install:
