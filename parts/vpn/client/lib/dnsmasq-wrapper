#!/bin/sh

set -eu

rm /etc/resolv.conf
cat <<EOF >/etc/resolv.conf
nameserver 127.0.0.1
EOF

/usr/sbin/dnsmasq                                                \
    --keep-in-foreground                                         \
    --no-hosts                                                   \
    --bind-interfaces                                            \
    --pid-file=/run/sendsigs.omit.d/puavo-vpn-client-dnsmasq.pid \
    --listen-address=127.0.0.1                                   \
    --cache-size=0                                               \
    --proxy-dnssec                                               \
    --enable-dbus=org.puavo.VPN.dnsmasq                          \
    --resolv-file=/run/resolvconf/resolv.conf
