if [ "$(whoami)" != "guest" ]; then
	exit 1
fi

# Write xscreensaver configuration file
cat << EOF > ~/.xscreensaver
timeout:		0:00:00
cycle:			0:10:00
lock:			False
lockTimeout:	0:00:00
passwdTimeout:	0:00:00
visualID:		default
installColormap:	True
verbose:		False
splash:			False
splashDuration:	0:00:05
demoCommand:	xscreensaver-settings
nice:			10
fade:			True
unfade:			True
fadeSeconds:	0:00:02
ignoreUninstalledPrograms:	False
dpmsEnabled:	False
dpmsQuickOff:	False
dpmsStandby:	2:00:00
dpmsSuspend:	2:00:00
dpmsOff:		4:00:00
grabDesktopImages:	False
grabVideoFrames:	False
chooseRandomImages:	True
imageDirectory:	/usr/share/puavo-webkiosk-language-selector/screensaver/$1

mode:			one
selected:		0

textMode:		url
textLiteral:	XScreenSaver
textFile:
textProgram:	fortune
textURL:		https://planet.debian.org/rss20.xml
dialogTheme:	default
settingsGeom:	863,741 2042,741

programs:                                                                     \
- GL:                           glslideshow --root --delay 29008              \
								  --duration 262 --zoom 90 --pan 25           \
								  --fade 4 --no-letterbox                   \n\


pointerHysteresis:  10
authWarningSlack:   20
EOF

# Activate screensaver
xscreensaver-command --activate
