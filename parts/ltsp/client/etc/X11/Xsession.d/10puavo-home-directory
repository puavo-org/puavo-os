if [ -h "$HOME" ]; then
  case "$(readlink "$HOME")" in
    /tmp/tmphome_*)
      if [ -e "${HOME}/.puavo/change_gocryptfs_password" ]; then
        /usr/bin/openbsd-cwm & cwm_pid=$!
        xterm -e gocryptfs -passwd "/home/.gocryptfs/$(id -u)"
        kill -9 "$cwm_pid"
      fi
      ;;
  esac

  exit 0
fi
