set -eu

. "${RESTRICTED_PKG_LIBDIR}/common"

usage_error()
{
    echo "error $1" >&2
    echo "Try 'puavo-restricted-package-tool install --help' for more information." >&2
    return 1
}

while [ $# -gt 0 ]; do
    case $1 in
        -h|--help)
            shift
            echo "Usage: puavo-restricted-package-tool install PACKAGE [PACKAGE]..."
            echo "Usage: puavo-restricted-package-tool install --all"
            echo "Usage: puavo-restricted-package-tool install --help"
            echo
            echo "Install restricted packages."
            echo
            echo "Options:"
            echo "    -h, --help                   print help and exit"
            echo "    --all                        install all downloaded packages"
            echo
            exit 0
            ;;
	--all)
	    shift
	    packages=$(puavo-restricted-package-tool list \
		| awk '{ if ($3 != "PURGED") print $1 }')
	    set -- ${packages}
	    break
	    ;;
        --)
            shift
            break
            ;;
        -*)
            usage_error "invalid argument '$1'"
            ;;
        *)
            break
            ;;
    esac
done

if [ $# -lt 1 ]; then
    usage_error "invalid number of arguments ($#), expected at least 1"
fi

exitval=0

for package in "$@"; do
    {
        "${RESTRICTED_PKG_LIBDIR}/helpers/unpack"    "${package}"
        configure_package "${package}"
    } || {
	exitval=$?
	echo "E: failed to install package '${package}'" >&2
	# Continue until we have tried to install all given packages
	# and then fail.
    }
done

exit $exitval
