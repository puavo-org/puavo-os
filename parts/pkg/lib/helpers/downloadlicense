set -eu

. "${RESTRICTED_PKG_LIBDIR}/common.bash"

on_exit()
{
    local exitval=$?
    set +e

    rm -f "${upstream_license}.tmp"

    exit $exitval
}

package=$1

custom_script="${RESTRICTED_PKG_SHAREDIR}/${package}/downloadlicense"

packagedir=$(packagedir "$package")
upstream_pack_md5sum=$(upstream_pack_md5sum "$package")
upstream_license="${packagedir}/upstream.license"

cache_path=$(upstream_license_cache_path "$package")

mkdir -p "$packagedir"

if [ -e "$cache_path" -a ! "$cache_path" -ef "$upstream_license" ]; then
  cp -u "$cache_path" "$upstream_license"
fi

if [ -r "$upstream_license" ]; then
  echo "License file is already in place for '${package}'" >&2
  exit 0
fi

url="$(jq -r .url ${RESTRICTED_PKG_SHAREDIR}/${package}/license.json)"

if [ -z "$url" ]; then
  echo "No license url could be found for '${package}'" >&2
  exit 1
fi

trap on_exit EXIT

if [ -x "${custom_script}" ]; then
    "${custom_script}" "${url}" "${upstream_license}.tmp"
else
    wget \
        --no-use-server-timestamps \
        --no-verbose \
        --no-check-certificate \
        --no-cookies \
        --output-document "${upstream_license}.tmp" \
        --quiet \
        "${url}"
fi

mv "${upstream_license}.tmp" "${upstream_license}"

exit 0
