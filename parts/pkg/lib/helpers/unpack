set -eu

. "${RESTRICTED_PKG_LIBDIR}/common"

on_exit()
{
    local exitval=$?
    set +e

    if [ $exitval -ne 0 ]; then
	rm -rf "${prpdir}"
	rm -rf "${installdir}" "${installdir}.tmp"
    fi

    exit $exitval
}

package=$1

upstream_pack_md5sum=$(upstream_pack_md5sum "$package")
packagedir=$(packagedir "$package")
installdir="${packagedir}/i"
prpdir="${packagedir}/PRP"

has_install_link "$package" && exit 0

if [ -d "${installdir}" ]; then
  make_install_link "$packagedir" "$package"
  exit 0
fi

upstream_pack="${packagedir}/upstream.pack"
[ ! -f "${upstream_pack}" ] && {
    echo "E: cannot install package '${package}' because the upstream pack" \
        "is missing, download it first" >&2
    exit 1
}

trap on_exit EXIT

# Copy all packaging stuff from the template directory.
mkdir "${prpdir}"
cp -a -T "${RESTRICTED_PKG_SHAREDIR}/${package}" "${prpdir}"

if [ ! -f "${upstream_pack_md5sum}.nocheck" ]; then
  echo "${upstream_pack_md5sum}  ${upstream_pack}" | md5sum --check --status || {
      echo "E: md5 checksum of the upstream pack '${upstream_pack}' does not" \
          "match the known checksum ${upstream_pack_md5sum}," \
          "perhaps you should purge the package and download it again?" >&2
      exit 1
  }
fi

# We own this directory!
rm -rf "${installdir}.tmp"
mkdir "${installdir}.tmp"

[ -x "${prpdir}/unpack" ] && "${prpdir}/unpack" "${upstream_pack}" "${installdir}.tmp"

mv -T "${installdir}.tmp" "${installdir}"

make_install_link "$packagedir" "$package"

exit 0
