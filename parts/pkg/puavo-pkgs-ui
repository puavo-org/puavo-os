    background: transparent;
    outline: none;
}

.package_vbox {
    /* Space between list entries */
    padding-bottom: 20px;

    /* Don't let the scrollbar cover any texts or buttons */
    padding-right: 14px;
}

.header_row {
    background: #ddd;
    border-radius: 5px;
    padding-left: 20px;
}

.details_row {
    padding: 0 20px;
}

.buttons_container {
    padding-top: 10px;
}

.package_name {
    font-weight: bold;
    font-size: 110%;
}

.package_description {
    padding-top: 10px;
}

.license_link {
}

.action_button {
}

.log_button {
}

.action_spinner {
}

/* Package state indicators */
.package_state {
    border-radius: 0 5px 5px 0;
    font-weight: bold;
    padding: 10px 20px;  /* This makes the entire header bar tall */
}

.state-not-installed {
    background: lightblue;
}

.state-installing {
    background: yellow;
}

.state-installed {
    background: lightgreen;
}

.state-removing {
    background: orange;
}

.state-error {
    background: sandybrown;
}

""")

# ------------------------------------------------------------------------------
# Create the main window

win = Gtk.Window()
win.connect('destroy', Gtk.main_quit)

win.set_border_width(10)
win.set_position(Gtk.WindowPosition.CENTER)
win.set_title(_tr('Lisäohjelmistojen asennin'))

this_script = open(os.path.realpath(sys.argv[0]), 'r')
try:
    fcntl.flock(this_script, fcntl.LOCK_EX | fcntl.LOCK_NB)
except BlockingIOError:
    errmsg = ('"%s"' % _tr('Lisäohjelmistojen asennin')) \
                + ' ' + _tr('on jo käynnissä')
    dialog = Gtk.MessageDialog(win, 0, Gtk.MessageType.ERROR,
               Gtk.ButtonsType.CANCEL, errmsg)
    dialog.run()
    sys.exit(1)

# The package list can be very long on some machines, so try to use as much
# space on the screen as possible, within limits
try:
    screen_height = Gdk.Screen.get_default().height()
except:
    screen_height = 768

screen_height = int(screen_height * 0.75)
screen_height = max(min(screen_height, 800), 400)

win.set_default_size(1000, screen_height)

# Outer container
box_outer = Gtk.Box(orientation=Gtk.Orientation.VERTICAL, spacing=6)
win.add(box_outer)

button = Gtk.Button(label=_tr('Hyväksy kaikki lisenssit ja asenna kaikki paketit'))
button.connect('clicked', lambda w: confirm_install_all_packages(win, pkg_list))
box_outer.pack_start(button, False, False, 0)

# The package list widget
list_win = Gtk.ListBox()
list_win.set_selection_mode(Gtk.SelectionMode.NONE)

# Outermost container for the package list
scrolled_win = Gtk.ScrolledWindow()
scrolled_win.add(list_win)
box_outer.pack_start(scrolled_win, True, True, 0)

set_widget_style(list_win, 'package_list', style_provider)
set_widget_style(scrolled_win, 'scrolled_window', style_provider)

# ------------------------------------------------------------------------------
# Setup packages

pkg_list = []

for pkgname in puavoconf_get('puavo.pkgs.ui.pkglist').split():
    pkg_list.append( PuavoPkg(pkgname) )

# Fill the package list
previous_pkg = None

for pkg in pkg_list:
    if pkg.add_to_grid(list_win, style_provider, previous_pkg):
        previous_pkg = pkg

if not previous_pkg:
    error_message(win,
        _tr('Ei paketteja'),
        _tr('Yhtään pakettia ei ole listattu asennettavaksi tai poistettavaksi.\n\n'
            'Tarkista <tt>puavo.pkgs.ui.pkglist</tt> -puavoconf -asetuksen sisältö.'))

    sys.exit(1)

win.show_all()
Gtk.main()
